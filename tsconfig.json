{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "alwaysStrict": true,
        "outDir": "./dist",
        "noUncheckedIndexedAccess": true,
        "jsx": "react",
        "lib": ["ES2021", "DOM"]
    },
    "include": ["lib/**/*", "test/**/*", "scripts/**/*.ts"]
}
